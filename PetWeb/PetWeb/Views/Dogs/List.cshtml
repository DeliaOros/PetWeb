@model IEnumerable<PetWeb.Models.Dog>

@{
    ViewData["Title"] = "List of Dogs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Dogs</h2>
<img src="https://www.guidedogs.org/wp-content/uploads/2018/01/Mobile.jpg" alt="Dog" width="100" height="100">
<p>
    <a asp-action="Create">Create New</a>
</p>
<br>
<label>Total Dogs: @Model.Count() </label>
<br>
<br>
<div>
    Current date and time: @DateTime.Now
</div>
<br>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NickName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirthDisplay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner.GetNameAndEmail)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NickName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirthDisplay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner.GetNameAndEmail)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
        }
    </tbody>
</table>
